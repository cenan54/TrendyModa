@{
    Layout = null; // Layout kullanılmayacak
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Biraz Bekleyin...</title>
    <!-- Bootstrap CSS ekleme -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script>
        // Sayfa yüklendikten 5 saniye sonra Login sayfasına yönlendirme
        window.onload = function() {
            setTimeout(function() {
                window.location.href = '@Url.Action("Login", "Account")'; // "Account" controller'ın "Login" action'ına yönlendir
            }, 3000); // 3 saniye bekletme
        };
    </script>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        Oturum Kapatılıyor
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Lütfen Bekleyin</h5>
                        <p class="card-text">Oturumunuz güvenli bir şekilde kapatılıyor. Giriş ekranına yönlendirileceksiniz.</p>
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Yükleniyor...</span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS ve bağımlılıkları ekleme -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
