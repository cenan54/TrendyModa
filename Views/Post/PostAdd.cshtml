@model TrendyModa.Models.Photo

@{
    ViewData["Title"] = "Gönderi Ekle";
}





<div class="row">
    <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
        <div class="col-sm-12 col-lg-8 col-xxl-6">
        <h4 class="mb-4">Gönderi Ekle</h4>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 box border-2 border-primary">
                    <div class="col-12">
                        <form asp-action="PostAddAction" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mt-3 mx-3">
                                <label asp-for="Image" class="control-label">Resim Yükle</label>
                                <hr />
                                <input class="btn btn-primary" type="file" id="files" asp-for="Image" name="Image" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-5 mx-3">
                                <label asp-for="Description" class="control-label"></label>
                                <hr/>
                                <input asp-for="Description" type="text" class="form-control col-md-6" placeholder="Açıklama giriniz...">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group my-5 d-flex justify-content-center">
                                <input type="submit" value="Gönderi Ekle" class="btn btn-success d-flex justify-content-center" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <div class="mt-5">
            <a class="btn btn-primary" asp-controller="Post" asp-action="GetImage">Back to List</a>
        </div>
        </div>
    <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

                
