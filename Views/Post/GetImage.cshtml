@using System.Security.Claims
@{
    //kullanıcının sahip olduğu post sayısını tutan değişken
    int userPostCount = 0;
    ViewData["Title"] = "Gönderilerim";
}

@model IEnumerable<Photo>


<main role="main">
    <div class="album p-5 bg-light">
        <div class="container">
            <div class="row px-5">

                @* kullanıcının kaç tane post attğını döngü ile bulma işlemi*@
                @foreach (var item in Model)
                {
                    if (User.FindFirst(x => x.Type == "UserId").Value == item.UserId.ToString())
                    {
                        userPostCount++;
                    }
                }

                @* kullanıcı daha önce post atmış mı diye kontrol etme işlemi*@
                @if (userPostCount==0)
                {
                    <div>Henüz gönderi atmadınız. <a class="btn btn-success" asp-controller="Post" asp-action="PostAdd">Gönderi Ekle</a></div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        @* burada login yapan kişinin id si ile database user id kontrol 
                        ekiliyor ki başkasının postu gözükmesin*@
                        if (User.FindFirst(x => x.Type == "UserId").Value == item.UserId.ToString())
                        {
                            string imageBase64 = Convert.ToBase64String(item.Image);
                            string imageSrc = String.Format("data:image;base64,{0}", imageBase64);

                            <div class="row">
                                <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
                                <div class="col-sm-12 col-lg-8 col-xxl-6">
                                    <div class="col-sm-12">
                                        <div class="card mb-4 box-shadow">
                                            <img class="card-img-top" src="@imageSrc" alt="Card image cap">
                                            <div class="card-body">
                                                <p class="card-text">@item.User.Username</p>
                                                <p class="card-text">@item.Description</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group">
                                                        <a type="button" class="btn btn-sm btn-outline-secondary">Beğen</a>
                                                        <a type="button" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                                                        <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@item.PhotoId">Sil</a>
                                                    </div>
                                                    <small class="text-muted"></small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
                            </div>

                           
                        }
                    }
                }
            </div>
        </div>
    </div>
</main>

