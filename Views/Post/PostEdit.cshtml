@model TrendyModa.ViewModels.PostEditVM

@{
    
}

<partial name="ReturnGetImage" />

<main role="main">
  <div class="album p-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
            <div class="col-sm-12 col-lg-8 col-xxl-6">

                <div class="col-12">
                    <div class="card mb-4 box-shadow border border-3 rounded">
                        <div class="card-body">

                                <form asp-action="PostEditConfirmed" method="post">
                                    <input type="hidden" name="photoId" value="@Model.PhotoId" />
                                    <div class="form-group">
                                        <label for="description" class="border-bottom border-3 border-primary">Açıklamayı Düzenleyin</label>
                                        <input type="text" id="description" name="description" class="form-control mt-3" value="@Model.Description" />
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
                                </form>
                            <br />

                            <div class="btn-group">
                                <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@Model.PhotoId">Gönderiyi Sil</a>
                            </div>
                            <br />
                            


                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-0 col-lg-2 col-xxl-3"></div>
        </div>
          </div>
           </div>
           </main>
           